
import hikari
import lightbulb



bot = lightbulb.BotApp(token  = 'NjgzODEzOTYyNDkxNDk0NDY0.XlxBYQ.NnbzwQo9ft4ZwRhkugOnPTJvoB4', 
                        default_enabled_guilds=(934634080581070878)
                       )


@bot.listen(hikari.StartedEvent)
async def on_started(event):
    print('Bot startato!')

@bot.command
@lightbulb.command("ping", "Says Pong!")
@lightbulb.implements(lightbulb.SlashCommand)
async def ping(ctx):
    await ctx.respond("Pong!")
    
@bot.command
@lightbulb.command("group", "This is a group")
@lightbulb.implements(lightbulb.SlashCommand)
async def my_group(ctx):
    pass


@my_group.child
@lightbulb.command("subcommand", "this is a subcommand")
@lightbulb.implements(lightbulb.SlashCommand)
async def subcommand(ctx):
    await ctx.responds("SubCommand")
    
@bot.command
@lightbulb.option("num1", "first number to sum", type = int)
@lightbulb.option("num2", "second number to sum", type = int)
@lightbulb.command("sum", "Sum two numbers")
@lightbulb.implements(lightbulb.SlashCommand)
async def add(ctx):
    await ctx.respond(ctx.options.num1 + ctx.options.num2)
    
@bot.command
@lightbulb.command("kick", "kick users")
@lightbulb.implements(lightbulb.SlashCommand)
async def kick(ctx, member ,reason = None):
    await member.kick(reason = reason)
bot.run()